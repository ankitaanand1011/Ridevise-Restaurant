<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_image_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    >

                        <ImageView
                            android:id="@+id/iv_veg_sign"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/nonveg"
                            android:textColor="@color/dark_green"
                            />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_toEndOf="@+id/rl_image_logo"
                    android:orientation="vertical"
                    android:layout_toStartOf="@+id/rl_end"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_centerVertical="true"

                    >
                        <TextView
                            android:id="@+id/tv_item_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"/>
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:singleLine="true"
                            android:text="â‚¹ 200"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_end"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp">


                        <TextView
                            android:id="@+id/tv_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/tv_bg_green"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="Add"

                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />

                        <LinearLayout
                            android:id="@+id/ll_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"

                                    android:background="@drawable/tv_bg_grey_left_side"
                                    android:layout_weight="1">
                                        <ImageView
                                            android:id="@+id/iv_minus"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:src="@mipmap/minus"
                                            android:layout_gravity="center_vertical"
                                            android:textColor="@color/dark_green"

                                            />
                                </RelativeLayout>
                                <TextView
                                    android:id="@+id/tv_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="1"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/d_grey"
                                    android:background="@drawable/tv_bg_grey_center"
                                    android:textSize="@dimen/_13sdp" />
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"

                                    android:background="@drawable/tv_bg_grey_right_side"
                                    android:layout_weight="1">

                                        <ImageView
                                            android:id="@+id/iv_plus"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:layout_gravity="center_vertical"
                                            android:src="@mipmap/plus"
                                            android:textColor="@color/dark_green"
                                            />
                                </RelativeLayout>
                        </LinearLayout>
                </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey_border"/>


</LinearLayout>