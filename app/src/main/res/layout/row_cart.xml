<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
           >

                <RelativeLayout
                    android:id="@+id/rl_image_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    >

                        <ImageView
                            android:id="@+id/iv_veg_sign"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center"
                            android:layout_gravity="top"
                            android:src="@mipmap/nonveg"
                            android:textColor="@color/dark_green"
                            />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_toEndOf="@+id/rl_image_logo"
                    android:orientation="vertical"
                    android:layout_toStartOf="@+id/ll_count"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_centerVertical="true"

                    >
                        <TextView
                            android:id="@+id/tv_item_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"/>
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:singleLine="true"
                            android:text="â‚¹ 200"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"/>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_count"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/ll_end"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/et_bg_white"
                    android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/iv_minus"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/minus"
                                    card_view:tint="@color/dark_green"
                                    android:textColor="@color/dark_green"
                                    />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/d_grey"
                            android:textSize="@dimen/_12sdp" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/iv_plus"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:gravity="end"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/plus"
                                    android:textColor="@color/dark_green"
                                    card_view:tint="@color/dark_green" />
                        </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">




                        <ImageView
                            android:id="@+id/iv_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/delete"
                            android:layout_gravity="end"
                            android:background="@android:color/transparent"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            />



                </LinearLayout>

        </RelativeLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="@color/white"

            />


</LinearLayout>