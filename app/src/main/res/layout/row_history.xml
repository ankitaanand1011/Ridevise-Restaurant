<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/ll_price"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_centerVertical="true"

            >
            <TextView
                android:id="@+id/tv_order_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="From"
                    android:textColor="@color/d_grey"
                    android:textSize="@dimen/_12sdp"/>
                <TextView
                    android:id="@+id/tv_branch_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:singleLine="true"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/tv_from"
                    android:text="Branch Name"
                    android:textColor="@color/dark_green"
                    android:textSize="@dimen/_12sdp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:singleLine="true"
                android:text="19-05-21 at 06:10pm"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:drawablePadding="@dimen/_5sdp"
                card_view:drawableStartCompat="@mipmap/date" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_centerVertical="true"

            >
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="â‚¹ 525"
                android:textColor="@color/dark_green"
                android:textSize="@dimen/_14sdp"/>
            <TextView
                android:id="@+id/tv_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="COD"
                android:textColor="@color/d_grey"
                android:textSize="@dimen/_12sdp"/>

        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_view_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingStart="@dimen/_40sdp"
        android:paddingEnd="@dimen/_40sdp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/view_details"
        android:layout_gravity="center"
        android:background="@drawable/tv_bg_green"
        android:textSize="@dimen/_12sdp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey_border"/>


</LinearLayout>