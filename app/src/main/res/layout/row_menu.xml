<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >


        <RelativeLayout
            android:id="@+id/rl_img"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/et_bg_white">

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/food_img"
                android:padding="@dimen/_3sdp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/iv_veg_sign"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:gravity="start"

                android:src="@mipmap/nonveg"
                android:textColor="@color/dark_green"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/rl_img"
            android:layout_centerVertical="true"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_dish_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:layout_toStartOf="@+id/iv_active"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"/>

                <ImageView
                    android:id="@+id/iv_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/active"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitXY"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_menu_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Main Course"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_grey"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Menu description Lorem ipsum dolor sit amet "
                    android:textColor="@color/d_grey"
                    android:textSize="@dimen/_10sdp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"

                >
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:text="â‚¹ 520"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_14sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    />
                <TextView
                    android:id="@+id/tv_est_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:singleLine="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_toEndOf="@+id/tv_price"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="30-35 mins"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_light_grey"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    />

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="start"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/delete"
                    android:textColor="@color/dark_green"
                    />
            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey_border"/>


</LinearLayout>