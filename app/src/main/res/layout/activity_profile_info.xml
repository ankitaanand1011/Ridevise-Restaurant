<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@color/dark_green">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_5sdp"

            />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:layout_toEndOf="@+id/iv_back"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textAllCaps="true"

            android:padding="@dimen/_5sdp"/>



    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingBottom="@dimen/_10sdp"

                >

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/et_bg_white"
                    android:padding="@dimen/_15sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/res_logo" />

                <ImageView
                    android:id="@+id/iv_add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/profile_camera"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-25dp"
                    android:padding="@dimen/_10sdp"
                    android:layout_below="@+id/iv_profile"
                    android:background="@drawable/circle_bg_white"
                    android:scaleType="fitXY"/>




            </RelativeLayout>

            <TextView
                android:id="@+id/tv_res_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/d_grey"
                android:textAllCaps="true"
                android:text="@string/restaurant_name"
                android:textSize="@dimen/_9sdp"/>
            <EditText
                android:id="@+id/et_res_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="start"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:background="@drawable/et_bg_white"
                android:text="@string/restaurant_name"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:id="@+id/tv_res_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/d_grey"
                android:textAllCaps="true"
                android:text="@string/mobile_no"
                android:textSize="@dimen/_9sdp"/>
            <EditText
                android:id="@+id/et_res_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="start"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:inputType="phone"
                android:background="@drawable/et_bg_white"
                android:text="9574872433"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:id="@+id/tv_contact_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/d_grey"
                android:textAllCaps="true"
                android:text="@string/contact_person"
                android:textSize="@dimen/_9sdp"/>
            <EditText
                android:id="@+id/et_contact_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="start"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:background="@drawable/et_bg_white"
                android:text="Person name"
                android:textSize="@dimen/_14sdp"/>
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/d_grey"
                android:textAllCaps="true"
                android:text="@string/location"
                android:textSize="@dimen/_9sdp"/>
            <EditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="start"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:background="@drawable/et_bg_white"
                android:text="Location"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:id="@+id/tv_full_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/d_grey"
                android:textAllCaps="true"
                android:text="@string/full_address"
                android:textSize="@dimen/_9sdp"/>
            <EditText
                android:id="@+id/et_full_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="start"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:background="@drawable/et_bg_white"
                android:text="Full Address"
                android:textSize="@dimen/_14sdp"/>


            <TextView
                android:id="@+id/tv_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/save"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/tv_bg_green"
                android:textSize="@dimen/_12sdp"/>
        </LinearLayout>
    </ScrollView>


    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.FadingCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        app:SpinKit_Color="@color/d_grey" />

</RelativeLayout>